<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stakemodual.StakeFragment">


    <TextView
        android:id="@+id/tv_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Were are you main Fragment"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_button_clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" Hello ji"
        app:layout_constraintLeft_toLeftOf="@id/tv_txt_view"
        app:layout_constraintRight_toRightOf="@id/tv_txt_view"
        app:layout_constraintTop_toBottomOf="@id/tv_txt_view" />

</androidx.constraintlayout.widget.ConstraintLayout>