<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Map Setting"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bdr_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/arrow_grey"
        app:layout_constraintLeft_toLeftOf="@id/dialog_title"
        app:layout_constraintRight_toRightOf="@id/dialog_title"
        app:layout_constraintTop_toBottomOf="@id/dialog_title" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/point_switch_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Point Name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/bdr_1" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/point_switch_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="Point Code"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/point_switch_1" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/point_switch_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="LRF"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="textStart"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/point_switch_2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/point_switch_3"
        app:layout_constraintRight_toRightOf="@id/point_switch_3"
        app:layout_constraintTop_toBottomOf="@id/point_switch_3">


        <ImageButton
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/criscross" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/light_gray" />

        <ImageButton
            android:id="@+id/satview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_satellite"
            app:tint="@color/seed" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/light_gray" />

        <ImageButton
            android:id="@+id/ibmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/mountains" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/light_gray" />

        <ImageView
            android:id="@+id/ivAttribute"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_attribute"
            app:tint="@color/colorPrimaryDark" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/light_gray" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/wms" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/light_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/moregray" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>