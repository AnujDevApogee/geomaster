<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/matchParent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_clear" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Map Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/brd_2"
                android:background="@color/light_gray" />

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/point_names"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchPointName"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/point_codes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchPointCode"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />

            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/imu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchIMU"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />

            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/lrf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchLRF"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />

            </LinearLayout>


            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/point_media"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/lines"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />

            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:foregroundGravity="left"
                    android:gravity="start"
                    android:text="@string/scale_bar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />

            </LinearLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_margin="@dimen/ten_dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ivImage"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/criscross" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    android:id="@+id/satview"
                    style="@style/wrapContent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@null"
                    android:src="@drawable/ic_satellite"
                    app:tint="@color/seed" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    android:id="@+id/ibmap"
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@null"
                    android:src="@drawable/mountains" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_gray" />

                <ImageView
                    android:id="@+id/ivAttribute"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_attribute"
                    app:tint="@color/colorPrimaryDark" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_gray" />

                <ImageButton
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/wms" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_gray" />

                <ImageView
                    style="@style/wrapContent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/moregray" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_margin="@dimen/ten_dp"
                android:background="@color/whitetest"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/wrapContent"
                    android:layout_margin="@dimen/ten_dp"
                    android:text="@string/map_opacity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/left_nav"
                    android:layout_width="@dimen/forty_eight"
                    android:layout_height="@dimen/forty_eight"
                    android:layout_gravity="center_vertical|left"
                    android:background="@color/white"
                    android:src="@drawable/ic_minus"
                    app:tint="@color/seed" />

                <TextView
                    android:layout_width="@dimen/forty_eight"
                    android:layout_height="@dimen/forty_eight"
                    android:layout_gravity="center_vertical|center"
                    android:gravity="center"
                    android:text="70%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_fifteen"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/right_nav"
                    android:layout_width="@dimen/forty_eight"
                    android:layout_height="@dimen/forty_eight"
                    android:layout_gravity="center_vertical|right"
                    android:background="@color/white"
                    android:src="@drawable/ic_add"
                    app:tint="@color/test" />

            </FrameLayout>

            <LinearLayout
                style="@style/matchWrap"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:src="@drawable/zoom" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch5"
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:thumbTint="@color/test"
                    android:trackTint="@color/blue" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>