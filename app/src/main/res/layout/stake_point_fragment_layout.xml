<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        style="@style/matchParent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/rlContainer">



        <org.osmdroid.views.MapView
            android:id="@+id/OSMmap"
            tilesource="Mapnik"
            style="@style/matchParent"
            android:visibility="gone"
            />



        <!--   <ImageView
               android:id="@+id/ivmap"
               style="@style/matchParent"
               android:src="@drawable/blankscreen_n"
               tools:ignore="ContentDescription"
               android:visibility="gone"/>-->


        <LinearLayout
            android:id="@+id/llaxis"
            style="@style/matchParent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                style="@style/wrapContent"
                android:orientation="vertical"
                android:padding="@dimen/five_dp">

                <TextView
                    android:id="@+id/tvdistanceaxis"
                    style="@style/wrapWrap"
                    android:text="Distance :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_eighteen"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/ten_dp" />

                <LinearLayout
                    style="@style/wrapContent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivdir"
                        style="@style/wrapContent"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvNorthaxis"
                        style="@style/wrapContent"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_eighteen"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>



                </LinearLayout>

                <LinearLayout
                    style="@style/matchWrap"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ten_dp">

                    <ImageView
                        android:id="@+id/ivdist"
                        style="@style/wrapContent"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvEastaxis"
                        style="@style/wrapContent"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_eighteen"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    style="@style/matchWrap"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivfill"
                        style="@style/wrapContent"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvFillaxis"
                        style="@style/wrapContent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_eighteen"
                        android:textStyle="bold" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llcvSlideup"
            style="@style/matchWrap"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSlideup"
                style="@style/matchWrap"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    style="@style/matchWrap"
                    android:orientation="vertical">
                    <LinearLayout
                        style="@style/matchWrap"
                        android:weightSum="2">
                        <LinearLayout
                            android:id="@+id/llChangeCoordinate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:padding="@dimen/five_dp"
                            android:weightSum="1">

                            <LinearLayout
                                style="@style/wrapContent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvlat"
                                    style="@style/wrapContent"
                                    android:text="@string/n_new"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/upgray"
                                    android:drawablePadding="@dimen/ten_dp"/>

                                <TextView
                                    android:id="@+id/tvNorth"
                                    style="@style/wrapContent"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"/>



                            </LinearLayout>

                            <LinearLayout
                                style="@style/matchWrap"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/three_dp">

                                <TextView
                                    android:id="@+id/tvLng"
                                    style="@style/wrapContent"
                                    android:text="@string/e_new"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold"
                                    android:drawableLeft="@drawable/rightgray"
                                    android:drawablePadding="@dimen/ten_dp"/>

                                <TextView
                                    android:id="@+id/tvEast"
                                    style="@style/wrapContent"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/matchWrap"
                                android:layout_marginTop="@dimen/three_dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvelev"
                                    style="@style/wrapContent"
                                    android:drawableLeft="@drawable/next_gray"
                                    android:drawablePadding="@dimen/ten_dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/ele_new"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvFill"
                                    style="@style/wrapContent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llAngle"
                                style="@style/matchWrap"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/three_dp"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/wrapContent"
                                    android:drawableLeft="@drawable/next_gray"
                                    android:drawablePadding="@dimen/ten_dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/angle"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvAngle"
                                    style="@style/wrapContent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fifteen"
                                    android:textStyle="bold" />

                            </LinearLayout>



                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llGDistance"
                            style="@style/wrapContent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/distanceinkm"
                                style="@style/wrapWrap"
                                android:textSize="@dimen/text_size_fourteen"
                                android:layout_marginLeft="@dimen/ten_dp" />


                            <TextView
                                android:id="@+id/heading"
                                style="@style/wrapWrap"
                                android:textSize="@dimen/text_size_fourteen"
                                android:layout_margin="@dimen/ten_dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llcordinate"
                            style="@style/wrapContent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvdistance"
                                style="@style/wrapWrap"
                                android:text="Distance :"
                                android:textSize="@dimen/text_size_fourteen"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:visibility="gone"/>

                            <LinearLayout
                                style="@style/matchWrap"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables">


                                <ImageView
                                    android:id="@+id/iv_easting"
                                    style="@style/wrapContent"
                                    tools:ignore="ContentDescription"
                                    android:layout_marginStart="@dimen/ten_dp" />

                                <TextView
                                    android:id="@+id/tv_easting"
                                    style="@style/wrapWrap"
                                    android:textSize="@dimen/text_size_fourteen"
                                    android:layout_marginStart="@dimen/ten_dp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <LinearLayout
                                style="@style/matchWrap"
                                android:layout_marginTop="@dimen/three_dp"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables">


                                <ImageView
                                    android:id="@+id/iv_northing"
                                    style="@style/wrapContent"
                                    tools:ignore="ContentDescription"
                                    android:layout_marginStart="@dimen/ten_dp" />
                                <TextView
                                    android:id="@+id/tv_northing"
                                    style="@style/wrapWrap"
                                    android:textSize="@dimen/text_size_fourteen"
                                    android:layout_marginStart="@dimen/ten_dp"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/matchWrap"
                                android:orientation="horizontal">
                                <LinearLayout
                                    style="@style/wrapWrap"
                                    android:layout_marginTop="@dimen/three_dp"
                                    android:orientation="vertical"
                                    tools:ignore="UseCompoundDrawables">
                                    <ImageView
                                        android:id="@+id/iv_arrowdown"
                                        style="@style/wrapContent"
                                        android:layout_marginStart="@dimen/ten_dp"
                                        tools:ignore="ContentDescription"/>


                                </LinearLayout>
                                <TextView

                                    android:id="@+id/tvElvdist"
                                    style="@style/wrapWrap"
                                    android:text="Distance :"
                                    android:textSize="@dimen/text_size_fourteen"
                                    android:layout_margin="@dimen/five_dp"
                                    android:visibility="gone"/>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/matchWrap"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_margin="@dimen/five_dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <TextView
                                style="@style/wrapContent"
                                android:gravity="center_vertical"
                                android:text="σ X : "
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvsigmaX"
                                style="@style/wrapContent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                style="@style/wrapContent"
                                android:gravity="center_vertical"
                                android:text="σ Y : "
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvsigmaY"
                                style="@style/wrapContent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                style="@style/wrapContent"
                                android:gravity="center_vertical"
                                android:text="σ Z : "
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvsigmaZ"
                                style="@style/wrapContent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/slideup"
                style="@style/wrapContent"
                android:src="@drawable/up_arrow"
                android:background="@color/white"
                android:padding="@dimen/ten_dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/ibcomapassright"
            style="@style/wrapContent"
            android:background="@null"
            android:padding="@dimen/ten_dp"
            android:layout_alignParentEnd="true"
            android:text="compass"
            android:textAllCaps="false"
            android:layout_below="@+id/llcvSlideup" />

        <RelativeLayout
            android:id="@+id/rlangle"
            style="@style/wrapContent"
            android:layout_below="@+id/llcvSlideup"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/ibaxis"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:background="#81DDD5D5"
                android:src="@drawable/all_axis"
                android:layout_toLeftOf="@+id/ibdegrees"
                android:padding="@dimen/five_dp"/>

            <ImageButton
                android:id="@+id/ibdegrees"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:background="@color/white"
                app:srcCompat="@drawable/acute_degrees"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/ten_dp"
                android:padding="@dimen/five_dp"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/matchWrap"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rlbottomdown"
                style="@style/matchWrap">

                <ImageButton
                    android:id="@+id/ibdownslide"
                    style="@style/wrapContent"
                    android:src="@drawable/down_arrow"
                    android:background="@color/white"
                    android:padding="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp"/>

                <LinearLayout
                    android:id="@+id/rlmap"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    style="@style/wrapContent">

                    <ImageButton
                        android:id="@+id/ibmapchoose"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/forty_dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/white"
                        android:padding="@dimen/five_dp"
                        android:src="@drawable/map_setting" />
                    <ImageButton
                        android:id="@+id/ibcamera"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/forty_dp"
                        android:background="@color/white"
                        android:layout_toRightOf="@+id/ibmapchoose"
                        android:layout_toLeftOf="@+id/ibzoom"
                        android:gravity="center_vertical"
                        android:src="@drawable/bubble_icon"
                        app:tint="#0E4A88" />

                    <ImageButton
                        android:id="@+id/ibzoom"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/forty_dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:background="@color/white"
                        android:padding="@dimen/five_dp"
                        app:srcCompat="@drawable/zoom" />

                </LinearLayout>


            </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:id="@+id/cvdown"
                style="@style/matchWrap"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_below="@+id/rlbottomdown">
                <RelativeLayout
                    style="@style/matchWrap">
                    <LinearLayout
                        android:id="@+id/lldown"
                        style="@style/matchWrap"
                        android:orientation="vertical"
                        android:padding="@dimen/three_dp">

                        <LinearLayout
                            style="@style/matchWrap"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:id="@+id/lldop"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvdoptitle"
                                    style="@style/wrapContent"
                                    android:text="@string/pdop"
                                    android:textSize="@dimen/text_size_fourteen" />

                                <TextView
                                    android:id="@+id/tvvdop"
                                    style="@style/wrapContent"
                                    android:layout_marginTop="@dimen/three_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_twelve" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray_new" />

                            <LinearLayout
                                android:id="@+id/llsatellite"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/thirty_dp"
                                    android:layout_height="@dimen/thirty_dp"
                                    android:background="@null"
                                    android:src="@drawable/satellite" />

                                <TextView
                                    android:id="@+id/tvSatellite"
                                    style="@style/wrapContent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fourteen" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="match_parent"
                                android:background="@color/light_gray_new" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvstop"
                                    style="@style/matchParent"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:text="@string/stop_survey"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_fourteen"
                                    android:visibility="gone"/>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            style="@style/matchWrap"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/three_dp">
                            <LinearLayout
                                android:id="@+id/llAntenna"
                                android:layout_width="0dp"
                                android:layout_weight=".8"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    style="@style/wrapContent"
                                    android:src="@drawable/rover_setting"
                                    android:layout_marginRight="@dimen/ten_dp"/>

                                <LinearLayout
                                    style="@style/wrapContent"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/wrapContent"
                                        android:text="@string/antenna"
                                        android:textSize="@dimen/text_size_fourteen"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/tvheight"
                                        style="@style/wrapContent"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_twelve"
                                        android:layout_marginTop="@dimen/three_dp"
                                        android:text="0.0" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:paddingBottom="@dimen/three_dp"
                                android:paddingTop="@dimen/three_dp">

                                <Button
                                    android:id="@+id/status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/buttondesign1"
                                    android:drawableLeft="@drawable/instrumentrovericoninactive"
                                    android:text="No Sol"
                                    android:textColor="@color/black"
                                    android:padding="@dimen/three_dp"/>



                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/wrapContent"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/three_dp"
                            android:layout_marginBottom="@dimen/three_dp"
                            android:background="@drawable/code_status">

                            <TextView
                                android:id="@+id/tvCodeName"
                                style="@style/wrapContent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_fifteen"
                                android:textStyle="bold"
                                android:text="@string/code_name"
                                android:minWidth="80dp"
                                android:paddingLeft="@dimen/ten_dp"
                                android:paddingRight="@dimen/ten_dp"
                                android:paddingTop="@dimen/three_dp"
                                android:paddingBottom="@dimen/three_dp"/>

                            <ImageButton
                                android:id="@+id/ibclear"
                                style="@style/wrapContent"
                                android:src="@drawable/cancel"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="@dimen/five_dp"
                                android:paddingBottom="@dimen/five_dp"
                                android:layout_marginRight="@dimen/ten_dp"/>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty_dp"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:layout_marginEnd="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:background="#eeeeee"
                            android:orientation="horizontal">


                            <ImageButton
                                android:id="@+id/left_nav"
                                android:layout_width="@dimen/forty_dp"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_gravity="center_vertical|left"
                                android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                            <TextView
                                android:id="@+id/tvPointName"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_gravity="center_vertical|center"
                                android:gravity="center" />

                            <ImageButton
                                android:id="@+id/right_nav"
                                android:layout_width="@dimen/forty_dp"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_gravity="center_vertical|right"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                        </FrameLayout>


                        <LinearLayout
                            style="@style/matchWrap"
                            android:orientation="horizontal"
                            android:weightSum="6">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/ibhome"
                                    style="@style/matchParent"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_home_black_24dp"
                                    android:background="@null"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/llPoint"
                                    style="@style/matchParent"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/clicking_blue" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/ibzoomout"
                                    style="@style/matchParent"
                                    android:src="@drawable/code_up_down"
                                    android:background="@null"
                                    android:gravity="center_vertical"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/ibtriangle"
                                    style="@style/matchParent"
                                    android:src="@drawable/triangle"
                                    android:background="@null"
                                    android:gravity="center_vertical"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/ibstake"
                                    style="@style/matchParent"
                                    android:src="@drawable/dir"
                                    android:background="@null"
                                    android:gravity="center_vertical"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/settings"
                                    style="@style/matchParent"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/settings_stake" />
                            </LinearLayout>





                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <ImageButton
            android:id="@+id/slidedown"
            style="@style/wrapContent"
            android:src="@drawable/down_arrow"
            android:background="@color/white"
            android:padding="@dimen/ten_dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ibright"
            style="@style/wrapContent"
            android:src="@drawable/right_arrow"
            android:background="@color/white"
            android:layout_marginTop="200dp"
            android:padding="@dimen/ten_dp" />

        <ImageButton
            android:id="@+id/ibdownslideup"
            style="@style/wrapContent"
            android:src="@drawable/up_arrow"
            android:background="@color/white"
            android:padding="@dimen/ten_dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>



        <RelativeLayout
            style="@style/matchParent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="2dp">

            <View
                android:id="@+id/vCode"
                style="@style/matchParent"
                android:background="#80000000"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llcode"
                style="@style/wrapMatch"
                android:layout_alignParentLeft="true"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/llcodesub"
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/matchWrap"
                        android:layout_marginTop="@dimen/twenty_dp">

                        <ImageButton
                            android:id="@+id/ibback"
                            style="@style/wrapContent"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:background="@null"
                            android:padding="@dimen/five_dp"
                            android:src="@drawable/backarrow"
                            android:visibility="gone" />

                        <TextView
                            style="@style/wrapContent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:gravity="center_vertical"
                            android:text="@string/point_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twenty_sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <RelativeLayout
                        style="@style/matchParent"
                        android:layout_margin="@dimen/ten_dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/stklist"
                            style="@style/matchParent"
                            android:orientation="vertical"
                            android:scrollbars="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <ExpandableListView
                            android:id="@+id/lvExp"
                            style="@style/matchParent"
                            android:divider="@android:color/darker_gray"
                            android:dividerHeight="0.5dp"
                            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

                        <ScrollView
                            android:id="@+id/svCode"
                            style="@style/matchParent"
                            android:fillViewport="true"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/linearLayout"
                                style="@style/matchParent"
                                android:orientation="vertical" />
                        </ScrollView>
                    </RelativeLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibleft"
                    style="@style/wrapContent"
                    android:layout_marginTop="200dp"
                    android:background="@color/white"
                    android:padding="@dimen/ten_dp"
                    android:src="@drawable/left_arrow" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llProgressBar"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/fifty_five_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/llBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:visibility="gone">


        </LinearLayout>
    </RelativeLayout>
</layout>