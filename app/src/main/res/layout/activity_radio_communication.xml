<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:orientation="vertical"
            style="@style/matchParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    style="@style/matchWarp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="1dp" />
                <LinearLayout
                    android:id="@+id/llFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txtdrop"
                        style="@style/matchWrap"
                        android:text="Frequency"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/ten_dp"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_marginLeft="@dimen/ten_dp">
                        <EditText
                            android:id="@+id/firstThreeDigitsEditText"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="3"
                            android:layout_gravity="center"
                            android:hint="410"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/border"
                            android:inputType="number"/>

                        <EditText
                            android:id="@+id/lastFourDigitsEditText"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:enabled="false"
                            android:hint="0125"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/border"
                            android:inputType="number"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/add"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:text="+"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/white"
                                android:background="@drawable/buttondesign"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/sub"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:text="-"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/white"
                                android:background="@drawable/buttondesign"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/confirm"
                    style="@style/wrapContent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/fifty_dp"
                    android:background="@drawable/buttondesign"
                    android:text="@string/confirm"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:minWidth="@dimen/one_hundred_twenty"/>
            </LinearLayout>
        </RelativeLayout>

</layout>
